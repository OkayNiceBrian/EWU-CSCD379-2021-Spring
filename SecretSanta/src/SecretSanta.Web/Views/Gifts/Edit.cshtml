@model GiftViewModel
@{
    ViewBag.Title = "Edit Gift";
}

<form asp-controller="Gifts" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    @await Html.PartialAsync("_CreateOrEdit")
    <button class=" hover:bg-red-500">Update</button>
    <a class=" hover:bg-red-500" asp-controller="Gifts" asp-action="Index">Cancel</a>
</form>