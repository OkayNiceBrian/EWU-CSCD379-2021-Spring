@model GiftViewModel

<div asp-validation-summary='All'></div>
<div class="flex mb-6">
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Title"></label>
        </div>
        <div class="w-2/3">
            <input class="border border-indigo-300 rounded-md w-full" type="text" asp-for="Title" />
        </div>
    </div>
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Description"></label>
        </div>
        <div class="w-2/3">
            <input class="border border-indigo-300 rounded-md w-full" type="text" asp-for="Description" />
        </div>
    </div>
</div>
<div>
    <label asp-for="Url"></label>: <input type="text" asp-for="Url" />
</div>
<div class="grid grid-cols-2">
    <div>
        <label asp-for="Priority" class="text-gray-500 font-bold text-right"></label>
        <input type="number" class="w-full" asp-for="Priority" />
    </div>
    <div>
        <label asp-for="UserReference"></label>
        <select asp-for="UserReference" asp-items="@(new SelectList(MockData.Users, "Id", "FullName"))">
            <option>Please select one</option>
        </select>
    </div>
</div>